---
const links = [
  {
    label: "Purro",
    href: "https://purro.xyz",
    external: true,
  },
  {
    label: "Corelia Academy",
    href: "https://corelia.academy",
    external: true,
  },
];
---

<header class="z-50 fixed top-0 left-0 right-0 w-full">
  <div class="container mx-auto px-4 py-4">
    <nav class="bg-slate-900/60 backdrop-blur-md border border-blue-500/20 rounded-full px-6 py-3 flex items-center justify-between">
      <!-- Logo/Home Link -->
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition-opacity duration-300">
        <img src="/terrannft.png" alt="Terran Logo" class="w-8 h-8 rounded-full" />
        <span class="font-satoshi-bold text-white text-lg hidden sm:block">Terran</span>
      </a>

      <!-- Navigation Links -->
      <div class="flex items-center gap-2 md:gap-4">
        {
          links.map((link) => (
            <a
              href={link.href}
              target={link.external ? "_blank" : "_self"}
              rel={link.external ? "noopener noreferrer" : ""}
              class="text-white/80 hover:text-white text-sm md:text-base px-3 py-2 rounded-full hover:bg-white/10 transition-all duration-300 font-satoshi-medium"
            >
              {link.label}
            </a>
          ))
        }
        
        <!-- Subscribe Button -->
        <a
          href="/subscribe"
          class="bg-gradient-to-r from-blue-600 to-cyan-600 hover:from-blue-700 hover:to-cyan-700 text-white text-sm md:text-base px-4 md:px-6 py-2 rounded-full transition-all duration-300 font-satoshi-bold whitespace-nowrap"
        >
          Subscribe
        </a>
      </div>
    </nav>
  </div>
</header>
